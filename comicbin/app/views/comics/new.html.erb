<div class='container'>
  <h2>Add a new comic</h2>
</div>

<div class='row'>
  <!-- RENDER THE FORM PARTIAL HERE. -->
	<form action="/movies/create" class="col-md-6 form">
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" name="title" class="form-control" id="title" placeholder="Enter title here">
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" name="plot" class="form-control" id="description" placeholder="Enter description here">
      </div>
      <div class="form-group">
        <label for="title">URL of Cover image:</label>
        <input type="text" name="image_url" class="form-control" id="image_url" placeholder="Enter URL to a cover image">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>


</div>

<div class='container'>
  <%= link_to 'Back to all comics', comics_path %>
</div>
